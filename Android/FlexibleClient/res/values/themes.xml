<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Parents of base styles. Can be customized according to API level. -->
    <style name="Theme.Genexus.Base.Dark" parent="@style/Theme.AppCompat.NoActionBar" />
    <style name="Theme.Genexus.Base.Light" parent="@style/Theme.AppCompat.Light.NoActionBar" />
    <style name="Theme.Genexus.Base.Light.DarkActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar" />

    <!-- Styles that are directly inherited by application-generated styles.
         These properties apply to all API levels. -->
    <style name="Theme.Genexus.Dark" parent="@style/Theme.Genexus.Base.Dark">
        <item name="gx_base_theme">Dark</item>
        <item name="dialogTheme">@style/Theme.Genexus.Base.Dark.Dialog</item>
        <item name="alertDialogTheme">@style/Theme.Genexus.Base.Dark.AlertDialog</item>
        <item name="colorAccentDialog">@color/accent_material_dark</item>

        <item name="actionBarCustomTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="Theme.Genexus.Light" parent="@style/Theme.Genexus.Base.Light">
        <item name="gx_base_theme">Light</item>
        <item name="dialogTheme">@style/Theme.Genexus.Base.Light.Dialog</item>
        <item name="alertDialogTheme">@style/Theme.Genexus.Base.Light.AlertDialog</item>
        <item name="colorAccentDialog">@color/accent_material_light</item>

        <item name="actionBarCustomTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="Theme.Genexus.Light.DarkActionBar" parent="@style/Theme.Genexus.Base.Light.DarkActionBar">
        <item name="gx_base_theme">LightWithDarkActionBar</item>
        <item name="dialogTheme">@style/Theme.Genexus.Base.Light.Dialog</item>
        <item name="alertDialogTheme">@style/Theme.Genexus.Base.Light.AlertDialog</item>
        <item name="colorAccentDialog">@color/accent_material_light</item>
        <item name="actionBarCustomTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupCustomTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="colorPrimary">@color/primary_material_dark</item>

    </style>

    <!-- Styles for dialogs with AppCompat, use accent color from applicable theme. -->
    <style name="Theme.Genexus.Base.Dark.Dialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="colorAccent">?attr/colorAccentDialog</item>
    </style>

    <style name="Theme.Genexus.Base.Dark.AlertDialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">?attr/colorAccentDialog</item>
    </style>

    <style name="Theme.Genexus.Base.Light.Dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/colorAccentDialog</item>
    </style>

    <style name="Theme.Genexus.Base.Light.AlertDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/colorAccentDialog</item>
    </style>
</resources>