<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:id="@+id/layoutPreferences"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    >

	<!-- Actual Action Bar -->
	<include
		android:id="@+id/toolbar"
		layout="@layout/tool_bar"
		></include>

   	<TextView
    	android:id="@+id/serverUrlTitle1"
    	android:text="@string/GXM_UserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#ffd5ddeb"
        android:padding="3dip"
       />
	        
	<LinearLayout
		android:id="@+id/layoutServerUrl"
    	android:orientation="horizontal"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:padding="10dip">
	    
    	<LinearLayout
	    	android:orientation="vertical"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1">
		    
	    	<TextView
		    	android:id="@+id/serverUrlTitle2"
		    	android:text="@string/GXM_ServerUrl"
		        android:layout_width="wrap_content"
	    	    android:layout_height="match_parent"
	        	android:textStyle="bold"
	        	android:textSize="16dp"
	        	android:layout_weight="1"/>
        	<TextView
	    		android:id="@+id/serverUrlSummary"
	    		android:text="@string/GXM_ServerUrl"
	        	android:layout_width="wrap_content"
	        	android:layout_height="match_parent"
	        	android:textColor="#0000ff"
	        	android:textStyle="normal"
	        	android:layout_weight="1"/>

		</LinearLayout>
	    <ImageView
	    	android:id="@+id/icon"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:visibility="visible"
	        android:layout_marginRight="6dip" android:src="@android:drawable/ic_menu_more"
			/>
	       
    </LinearLayout>
